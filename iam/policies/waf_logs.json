{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "Service": [
            "delivery.logs.amazonaws.com"
          ]
        },
        "Action": [
          "logs:CreateLogStream",
          "logs:PutLogEvents"
        ],
        "Resource": [
          "arn:aws:logs:${region}:${account_id}:log-group:aws-waf-logs-${name}-${stage}:log_stream:*"
        ],
        "Condition": {
          "StringEquals": {
            "aws:SourceAccount": ["${account_id}"]
          },
          "ArnLike": {
            "aws:SourceArn": ["arn:aws:logs:${region}:${account_id}:*"]
          }
        }
      }
    ]
  }